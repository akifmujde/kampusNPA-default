<!DOCTYPE html>
<html>
  <head>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <title>KampusNPA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>

  <body>
    <div id="loader" class="container">
      <div class="row">
        <div id="loader">
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="lading"></div>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-inverse" hidden>
      <%= render 'shared/navbar' %>
    </nav>

    <main class="container-fluid" style="width:100%;padding-top:0.5%;overflow:auto;" hidden>
      <div class="col-md-12 col-sm-12 col-md-12 col-lg-12" style="height:100%;" onload="yukle()">
        <%= yield %>
      </div>
    </main>

    <div class="footer container" hidden></div>

    <script>
      function yukle(){
          setTimeout(function () {
              $("nav").fadeIn('slow');
              $("main").fadeIn('slow');
              $("footer").fadeIn('slow');
              $("#loader").fadeOut('slow');
          }, 1500);
      }
      $(document).ready(function yukle() {
          setTimeout(function () {
              $("nav").fadeIn('slow');
              $("main").fadeIn('slow');
              $("footer").fadeIn('slow');
              $("#loader").fadeOut('slow');
          }, 1500);
      });
    </script>

  </body>
</html>
