      <li>
        <a href="/posts/new" data-toggle="tooltip" data-placement="bottom" title="<%= t("new_post_link") %>.">
          <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i>&nbsp;&nbsp;<%= t("new_post") %>
