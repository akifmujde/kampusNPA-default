      <li>
        <%= link_to "My Profile", current_user,class: "btn btn-link" %>
      </li>
      <li>
        <a class="btn-link" href="/users/edit" data-toggle="tooltip" data-placement="bottom" title="<%= t("edit_profile_link") %>.">
          <i class="fa fa-pencil-square-o fa-lg"></i>&nbsp;&nbsp;<%= t("edit_profile") %>
        </a>
      </li>
      <li>
        <a class="btn-link" rel="nofollow" data-method="delete" href="/users/sign_out" data-toggle="tooltip" data-placement="bottom" title="<%= t("sign_out_link") %>.">
